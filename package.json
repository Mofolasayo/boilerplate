{
  "name": "tenant-dashboard",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "test -d .git && husky install || true",
    "env:check": "tsx scripts/check-env.ts",
    "test:unit": "npm run test:unit --workspace web",
    "test:unit:watch": "npm run test:unit:watch --workspace web",
    "test:coverage": "npm run test:coverage --workspace web",
    "test:e2e": "npm run test:e2e --workspace web"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "tsx": "^4.19.2",
    "zod": "^4.1.12"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^8.57.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "turbo": "^2.5.5",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx,js,jsx}": [
      "npm run lint --workspace web -- --max-warnings=0 --file",
      "prettier --check"
    ],
    "*.{json,md,css,scss}": [
      "prettier --check"
    ]
  },
  "packageManager": "npm@10.8.2"
}
